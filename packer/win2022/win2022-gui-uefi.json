{
    "variables": {
        "proxmox_node": "omicron",
        "proxmox_storage_pool": "local-zfs",
        "proxmox_storage_pool_type": "zfspool",
        "proxmox_storage_format": "raw",
        "proxmox_iso_pool": "isos:iso",
        "windows_image": "ubuntu-22.04-live-server-amd64.iso",
        "template_name": "Windows-Server-2022-Template",
        "template_description": "Windows Server 2022 Template",
        "boot_wait": "5s",
        "disk_size": "40960",
        "iso_checksum": "3022424f777b66a698047ba1c37812026b9714c5",
        "iso_url": "https://software-download.microsoft.com/download/pr/17763.737.190906-2324.rs5_release_svc_refresh_SERVER_EVAL_x64FRE_en-us_1.iso",
        "memsize": "2048",
        "numvcpus": "2",
        "vm_name": "Win2019_17763",
        "winrm_password" : "packer",
        "winrm_username" : "Administrator"
    },
    "builders": [
        {
          "type": "vmware-iso",
          "guest_os_type": "windows9srv-64",
          "vm_name":"{{user `vm_name`}}",
          "boot_command": ["<spacebar>"],
          "boot_wait": "{{user `boot_wait`}}",
          "disk_size": "{{user `disk_size`}}",
          "disk_type_id": "0",
          "headless": false,
          "iso_checksum": "{{user `iso_checksum`}}",
          "iso_url": "{{user `iso_url`}}",
          "communicator":"winrm",
          "winrm_username": "{{user `winrm_username`}}",
          "winrm_password": "{{user `winrm_password`}}",
          "winrm_use_ssl": true,
          "winrm_insecure": true,
          "winrm_timeout": "4h",
          "floppy_files": ["scripts/uefi/gui/autounattend.xml"],
          "shutdown_command": "shutdown /s /t 5 /f /d p:4:1 /c \"Packer Shutdown\"",
          "shutdown_timeout": "30m",
          "skip_compaction": false,
          "vmx_data": {
            "memsize": "{{user `memsize`}}",
            "numvcpus": "{{user `numvcpus`}}",
            "virtualHW.version": "14",
            "firmware": "efi",
            "scsi0.virtualDev": "lsisas1068"
          }
        },
        {
            "type": "virtualbox-iso",
            "guest_os_type": "Windows2016_64",
            "vm_name": "{{user `vm_name`}}",
          "boot_command": ["<spacebar>"],
            "iso_url": "{{user `iso_url`}}",
            "iso_checksum": "{{user `iso_checksum`}}",
            "guest_additions_mode": "disable",
            "headless": false,
            "boot_wait": "{{user `boot_wait`}}",
            "disk_size": "{{user `disk_size`}}",
            "communicator":"winrm",
            "winrm_username": "{{user `winrm_username`}}",
            "winrm_password": "{{user `winrm_password`}}",
            "winrm_use_ssl": true,
            "winrm_insecure": true,
            "winrm_timeout": "4h",
            "shutdown_command": "shutdown /s /t 5 /f /d p:4:1 /c \"Packer Shutdown\"",
            "shutdown_timeout": "30m",
            "iso_interface": "sata",
            "vboxmanage": [
              ["modifyvm", "{{.Name}}", "--memory", "{{user `memsize`}}"],
              ["modifyvm", "{{.Name}}", "--cpus", "{{user `numvcpus`}}"],
              ["modifyvm", "{{.Name}}", "--firmware", "EFI"],
              ["storageattach", "{{.Name}}", "--storagectl", "SATA Controller", "--type", "dvddrive", "--port", "3", "--medium", "./scripts/uefi/gui/autounattend.iso"]
            ]
        }
    ],
    "provisioners": [
      {
        "type": "powershell",
        "only": ["vmware-iso"],
        "scripts": ["scripts/vmware-tools.ps1"],
        "pause_before": "1m"
      },
      {
        "type": "powershell",
        "only": ["virtualbox-iso"],
        "scripts": ["scripts/virtualbox-guest-additions.ps1"],
        "pause_before": "1m"
      },
      {
        "type": "powershell",
        "scripts": ["scripts/setup.ps1"]
      },
      {
        "type": "windows-restart",
        "restart_timeout": "30m"
      },
      {
        "type": "powershell",
        "scripts": ["scripts/win-update.ps1"]
      },
      {
        "type": "windows-restart",
        "restart_timeout": "30m"
      },
      {
        "type": "powershell",
        "scripts": ["scripts/win-update.ps1"]
      },
      {
        "type": "windows-restart",
        "restart_timeout": "30m"
      },
      {
        "type": "powershell",
        "scripts": ["scripts/cleanup.ps1"],
        "pause_before": "1m"
      }
    ]
}